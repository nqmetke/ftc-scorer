<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nqmetke.ftc_scorer.AboutActivity">


    <ImageView  android:id="@+id/img11"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:src="@drawable/both_dark"
        android:layout_above="@+id/website"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:id="@+id/website"
        android:layout_gravity="left"
        android:layout_above="@+id/facebook"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:id="@+id/facebook"
        android:layout_above="@+id/twitter"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Twitter"
        android:id="@+id/twitter"
        android:layout_above="@+id/youtube"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Youtube"
        android:id="@+id/youtube"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="188dp" />


</RelativeLayout>
